/* pages/homepage/homepage.wxss */
@import"/pages/bottom_menu/bottom_menu.wxss";
.page{
  width: 100%;
  margin: 0;
  background: white;
}


.content{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  overflow: hidden;
  padding-bottom: 96rpx;
}
.left{
  width: 345rpx;
  margin-left: 5rpx;
  align-items: center;
  justify-content: flex-start;
}
.right{
  width: 345rpx;
  margin-left: 10rpx;

}
.pic{
  border-radius: 10rpx;
  width:345rpx ;
}

/* 上边 | 右边 | 下边 | 左边 
 padding 2 50 20 0
 上边 | 左边右边 | 下边
*/
.title-wrap{
  padding: 5rpx 5rpx 0rpx 5rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  overflow: hidden;
  display: -webkit-box;
  align-items: initial;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.author{
  width: auto;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.portrait{
  width:50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.name-warp{
  font-size: 25rpx;
  color: #a5a4a4;
  font-weight: 500;
  letter-spacing: 3rpx;
  margin-left: 10rpx;
}

.loveNumber{
  width: auto;
  height: 50rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.love{
  width: 40rpx;
  height: 40rpx;

}
.number{
  font-size: 30rpx;
  color: #9e9a9a;
  margin-left: 5rpx;

}
.info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 15rpx 0rpx;
}
