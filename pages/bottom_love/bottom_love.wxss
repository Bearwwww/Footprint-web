/* pages/bottom_love/bottom_love.wxss */
.bottom-list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 9%;
  bottom: 0rpx;
  position: fixed;
  background-color: #ffffff;
}

image{
  width: 70rpx;
  height: 70rpx;
}

.comment-view{
  flex:6;
  text-align: center;
}

.share-view{
  flex: 8;
}

.collect-view{
  flex: 8;
  text-align: right;
}

.love-view{
  flex: 6;
  text-align: center;

}

.loveNumber{
  width: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 5rpx solid #b4b4b4;
  justify-content: flex-end;
  padding-top: 26rpx;
  padding-right: 20rpx;
}

.love{
  width:50rpx;
  height:50rpx;
  display: flex;

}
.number{
  font-size: 33rpx;
  color: #9e9a9a;
  padding-left: 5rpx;

}