/* pages/detailpage/detailpage.wxss */
@import"/pages/bottom_love/bottom_love.wxss";
.page{
  width: 100%;
  margin: 10rpx;
  background: #ffffff;
}

.content{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  overflow: hidden;
  padding-bottom: 100rpx;
  align-items: center;
}
.swiper{
  width: 100%;
  height: 750rpx;
}
.image-box{
  width: 680rpx;
}
.show{
  width: 680rpx;
  
}
.showImage{
  width: 680rpx;
  border-radius: 10rpx 10rpx;
}
.info{
  width: 96%;
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;

}
.portrait{
  width:90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.name-warp{
  font-size: 30rpx;
  color: #777474;
  font-weight: 500;
  letter-spacing: 5rpx;
  margin-left: 20rpx;
}
.text-box{
  width: 96%;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  padding-left: 10rpx;

}
.title-wrap{
  padding: 20rpx 20rpx 10rpx 0rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}
.articles-wrap{
  width: 95%;
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}

